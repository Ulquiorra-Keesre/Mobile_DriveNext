<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">


        <!-- Стать арендодателем -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Стрелка назад -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_left"
                android:contentDescription="return_to_home"
                app:tint="#000000"
                android:padding="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Стать арендодателем"
                android:textColor="#101828"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/montserrat_regular"/>

        </LinearLayout>

        <TextView
            android:id="@+id/headernotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Узнайте, что включает в себя становление арендодателем в приложении. Присоединяйтесь к тысячам владельцев, зарабатывающих в приложении."
            android:textColor="#000000"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:fontFamily="@font/montserrat_regular"/>

        <!-- Как это работает -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="#F9F5FF"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/ic_gear"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/gear"
                app:layout_constraintTop_toBottomOf="@id/text1"
                app:layout_constraintEnd_toStartOf="@id/textnotation1"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="65dp"
                />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Как это работает"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textnotation1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="60dp"/>

            <TextView
                android:id="@+id/textnotation1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Размещение бесплатное, вы можете устанавливать свои цены, доступность и правила. Получение и возврат автомобиля просты, а оплата производится быстро после каждой поездки."
                android:textColor="#000000"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintTop_toBottomOf="@id/text1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/text1"
                android:layout_marginStart="60dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:background="#F9F5FF">

            <ImageView
                android:id="@+id/ic_shield"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/shield"
                app:layout_constraintTop_toBottomOf="@id/text2"
                app:layout_constraintEnd_toStartOf="@id/textnotation2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="65dp"
                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Политика страхования"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textnotation2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="60dp"/>

            <TextView
                android:id="@+id/textnotation2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Доступны различные уровни защиты автомобиля на случай непредвиденных ситуаций."
                android:textColor="#000000"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintTop_toBottomOf="@id/text2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/text2"
                android:layout_marginStart="60dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Мы поддержим вас -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp"
            android:background="#F9F5FF">

            <ImageView
                android:id="@+id/ic_heart"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/heart"
                app:layout_constraintTop_toBottomOf="@id/text3"
                app:layout_constraintEnd_toStartOf="@id/textnotation3"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="65dp"
                />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Мы поддержим вас"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textnotation3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="60dp"/>

            <TextView
                android:id="@+id/textnotation3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="От проверки арендаторов до поддержки клиентов – вы всегда можете делиться своим автомобилем с уверенностью."
                android:textColor="#000000"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintTop_toBottomOf="@id/text3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/text3"
                android:layout_marginStart="60dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Кнопка Начать -->
        <Button
            android:id="@+id/btnStartHosting"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Начать"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#2A1246"
            android:layout_marginBottom="20dp"
            android:letterSpacing="0.02"
            android:paddingVertical="12dp"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintTop_toBottomOf="@id/textnotation3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="115dp"/>

    </LinearLayout>
</ScrollView>