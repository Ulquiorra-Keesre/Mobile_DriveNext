<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".ui.Authentication_Registration.GettingStartedActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DriveNext"
        android:textSize="24sp"
        android:textColor="#2A1246"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat_semi_bold"/>

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Поможем найти твою следующую поездку"
        android:textSize="14sp"
        android:textColor="#2A1246"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        android:layout_marginBottom="@id/illustrationImage"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/illustrationImage"
        android:layout_width="343dp"
        android:layout_height="343dp"
        android:src="@drawable/drivenext"
        android:contentDescription="Иллюстрация приветствия"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Войти"
        android:textColor="@android:color/white"
        android:backgroundTint="#2A1246"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintTop_toBottomOf="@id/illustrationImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="32dp" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Зарегистрироваться"
        android:textColor="#2A1246"
        android:backgroundTint="@android:color/white"

        android:strokeColor="#2A1246"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintTop_toBottomOf="@id/loginButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>